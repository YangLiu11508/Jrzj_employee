<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_40"
        android:background="#f5f5f5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/ds_25">

        <TextView
            android:id="@+id/tv_fuwu"
            style="@style/textview_order"
            android:text="服务项目：" />

        <TextView
            android:id="@+id/tv_fuwu_dec"
            style="@style/textview_order"
            android:layout_toRightOf="@id/tv_fuwu"
            android:text="管道维修" />

        <TextView
            android:id="@+id/tv_bianhao"
            style="@style/textview_order"
            android:layout_below="@id/tv_fuwu"
            android:text="订单编号：" />

        <TextView
            android:id="@+id/tv_bianhao_dec"
            style="@style/textview_order"
            android:layout_below="@id/tv_fuwu_dec"
            android:layout_toRightOf="@id/tv_bianhao"
            android:text="aaaaaaaaa" />


        <TextView
            android:id="@+id/tv_time"
            style="@style/textview_order"
            android:layout_below="@id/tv_bianhao"
            android:text="预约时间：" />

        <TextView
            android:id="@+id/tv_time_dec"
            style="@style/textview_order"
            android:layout_below="@id/tv_bianhao_dec"
            android:layout_toRightOf="@id/tv_bianhao"
            android:text="2015-09-09（周六）10:00" />

        <TextView
            android:id="@+id/tv_address"
            style="@style/textview_order"
            android:layout_below="@id/tv_time"
            android:text="预约地址：" />

        <TextView
            android:id="@+id/tv_address_dec"
            style="@style/textview_order"
            android:layout_below="@id/tv_time_dec"
            android:layout_toRightOf="@id/tv_bianhao"
            android:text="北京市昌平区昌平aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa昌平区" />


        <TextView

            android:id="@+id/tv_price"
            style="@style/textview_order"
            android:layout_below="@id/tv_address_dec"
            android:text="已付款：" />

        <TextView
            android:id="@+id/tv_price_dec"
            style="@style/textview_order"
            android:layout_below="@id/tv_address_dec"
            android:layout_toRightOf="@id/tv_bianhao"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="100元" />


        <TextView
            android:layout_marginRight="@dimen/ds_50"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/ds_30"
            android:textSize="@dimen/fs_45"
            android:textColor="#fb251f"
            android:layout_width="wrap_content"
            android:text="已完成"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</LinearLayout>